<h1> List of Books! </h1>

<% if @books.any? %>
    <table>
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Action</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.author %></td>
            <td><%= book.title %></td>
            <td>
                <%= link_to 'Show', book_path(book) %>
                <%= link_to 'Edit', edit_book_path(book) %>
                <%= link_to 'Delete', book_path(book), data: { "turbo-method": :delete } %>
            </td>
        </tr>
        <%end%>
    </table>
<% else %>
<p>No books found in here!</p>
<%end%>
<br>
<%= link_to 'New', new_book_path %>